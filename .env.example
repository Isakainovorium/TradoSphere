# ================================
# TradoSphere Environment Variables
# ================================

# --------------------------------
# Frontend (apps/web/.env.local)
# --------------------------------

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3001

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Gemini AI
GEMINI_API_KEY=your-gemini-api-key-here

# Agora (Live Streaming)
NEXT_PUBLIC_AGORA_APP_ID=your-agora-app-id
AGORA_APP_CERTIFICATE=your-agora-certificate

# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# --------------------------------
# Backend (apps/api/.env)
# --------------------------------

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/tradosphere

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# JWT
JWT_SECRET=your-jwt-secret-here

# Gemini AI
GEMINI_API_KEY=your-gemini-api-key-here

# Broker APIs
TRADOVATE_API_KEY=your-tradovate-key
TRADOVATE_API_SECRET=your-tradovate-secret

BINANCE_API_KEY=your-binance-key
BINANCE_API_SECRET=your-binance-secret

# Add other broker API keys as needed

# Redis (for rate limiting and caching)
REDIS_URL=redis://localhost:6379

# Agora
AGORA_APP_ID=your-agora-app-id
AGORA_APP_CERTIFICATE=your-agora-certificate

# Stripe
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# --------------------------------
# Supabase (supabase/.env)
# --------------------------------

# PostgreSQL
POSTGRES_PASSWORD=your-postgres-password

# JWT
JWT_SECRET=your-jwt-secret-here
